{
  "name": "react-stylus-home",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "stylus": "0.54.5",
    "autoprefixer-stylus": "0.14.0",
    "web-vitals": "^1.1.1"
  },
  "scripts": {
    "prestart": "rimraf ./src/styles.css",
    "prebuild": "rimraf ./src/styles.css",
    "start": "npm-run-all --parallel styles:watch start:app",
    "start:app": "react-scripts start",
    "styles": "stylus -u autoprefixer-stylus ./src/styles.styl -o ./src/styles.css",
    "styles:watch": "stylus -u autoprefixer-stylus -w ./src/styles.styl -o ./src/styles.css",
    "build": "npm-run-all --parallel styles build:app",
    "build:app": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
